    <div class="example--descriptor">
      <img src="{{ '/assets/cta/cta-primary-light.png' | url }}">
    </div>
    <div>
      <img src="{{ '/assets/cta/cta-secondary-light.png' | url }}">
    </div>
    <div>
      <img src="{{ '/assets/cta/cta-secondary-light.png' | url }}">
    </div>
    <div>
      <img src="{{ '/assets/cta/cta-secondary-light.png' | url }}">
    </div>
  </div>
  {%- endcall %}

  <p>Don’t use multiple Primary styles in the same area, that style is reserved to represent the one most important link.</p>
