{
  "include": [
    "./docs/11ty-types.d.ts",
    "./declaration.d.ts"
  ],
  "exclude": [
    "**/node_modules/**/*",
    "_site",
    "scripts/*.js",
    "elements/**/*.js",
    "elements/*/test/**/*.js",
    "elements/rh-secondary-nav/test/fixtures.js",
    "**/*.spec.ts",
    "**/*.e2e.ts",
    "lib/**/*.js",
    "./*.config.js"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "downlevelIteration": true,
    "emitDeclarationOnly": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "incremental": true,
    "inlineSources": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true,
    "noEmitOnError": false,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "plugins": [
      {
        "transform": "@lit/ts-transformers",
        "import": "idiomaticDecoratorsTransformer"
      },
      {
        "transform": "typescript-transform-lit-css",
        "inline": true,
        "cssnano": true
      },
      {
        "name": "typescript-lit-html-plugin"
      },
      {
        "name": "ts-lit-plugin"
      }
    ],
    "lib": [
      "DOM.iterable",
      "DOM",
      "ES5",
      "ES6",
      "ES2020",
      "ES2022",
      "ES2015.Generator",
      "ESNext.Collection",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.Disposable",
      "ScriptHost"
    ]
  },
  "references": [
    {
      "path": "./docs"
    },
    {
      "path": "./uxdot"
    }
  ]
}
