{
  "name": "@rhds/elements",
  "version": "1.0.0-beta.28",
  "description": "Red Hat Design System Elements",
  "type": "module",
  "license": "MIT",
  "customElements": "custom-elements.json",
  "exports": {
    ".": "./rhds.min.js",
    "./lib/*": "./lib/*",
    "./*": "./elements/*"
  },
  "contributors": [
    "Benny Powers <bennyp@redhat.com>",
    "Brian Ferry <bferry@redhat.com>",
    "Corey Vickery <cvickery@redhat.com>",
    "Em Nouveau <enouveau@redhat.com>",
    "Michael Potter <mpotter@redhat.com",
    "Wes Ruvalcaba <wruvalcaba@redhat.com>",
    "Steven Spriggs <sspriggs@redhat.com>",
    "Kelsey Swanson <kswanson@redhat.com>"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "!*.ts",
    "!*.{spec,e2e}.ts",
    "elements/*/*.{js,md,map,txt,d.ts}",
    "elements/*/*-lightdom.css",
    "!elements/*/docs/**/*.{js,html,css,md}",
    "!elements/*/demo/**/*.{js,html,css,md}",
    "!elements/*/test/*.{spec,e2e}.{ts,d.ts}",
    "lib/**/*.{js,md,map,css,svg,md,html,txt,d.ts}",
    "custom-elements.json",
    "rhds.min*"
  ],
  "scripts": {
    "-----DEV--------": "Development aids",
    "start": "wireit",
    "new": "npm init @patternfly/element",
    "-----BUILD------": "Prepare dist artifacts",
    "analyze": "cem analyze",
    "build": "wireit",
    "-----TEST-------": "Test packages",
    "test": "wtr --group default",
    "-----TEST---ALL FRAMEWORKS--": "Test packages - all frameworks",
    "test:ci": "wtr",
    "test:watch": "wtr --watch",
    "test:vue": "wtr --watch --group with-vue",
    "test:react": "wtr --watch --group with-react",
    "-----TEST---VISUAL REGRESSION--": "Test packages for visual regressions, locally",
    "e2e": "wireit",
    "e2e:update": "playwright test --update-snapshots",
    "-----DIST-------": "Publish packages",
    "site": "wireit",
    "prepublishOnly": "npm run build",
    "-----UTIL-------": "Manages the repo",
    "clean": "git clean -fX -e node_modules",
    "clean:nuke": "git clean -fX",
    "lint": "wireit",
    "prepare": "husky install",
    "proxy": "npx spandx -c spandx.config.cjs"
  },
  "wireit": {
    "start": {
      "service": true,
      "command": "web-dev-server --open --watch",
      "dependencies": [
        "watch:compile",
        "watch:docs"
      ]
    },
    "watch:docs": {
      "service": true,
      "command": "eleventy --serve --incremental",
      "dependencies": [
        "analyze"
      ]
    },
    "watch:compile": {
      "service": true,
      "command": "ttsc --watch"
    },
    "lint": {
      "dependencies": [
        "lint:eslint",
        "lint:styles"
      ]
    },
    "lint:eslint": {
      "command": "eslint .",
      "files": [
        "**/*.js",
        "**/*.ts",
        "**/*.html"
      ]
    },
    "lint:styles": {
      "command": "stylelint 'elements/**/*.css' 'docs/**/*.scss'",
      "files": [
        "**/*.css",
        "**/*.scss"
      ]
    },
    "build": {
      "dependencies": [
        "analyze",
        "compile",
        "styles",
        "bundle",
        "docs"
      ]
    },
    "compile": {
      "command": "ttsc",
      "files": [
        "elements/**/*.ts",
        "!elements/*/demo/**/*.js",
        "!elements/**/*.d.ts"
      ],
      "output": [
        "elements/**/*.d.ts",
        "elements/**/*.js",
        "elements/**/*.map",
        "!elements/*/demo/**/*.js"
      ]
    },
    "styles": {
      "command": "node scripts/transform-css.js"
    },
    "bundle": {
      "command": "node scripts/bundle.js"
    },
    "docs": {
      "command": "eleventy",
      "dependencies": [
        "analyze",
        "compile",
        "styles",
        "bundle"
      ],
      "files": [
        "docs"
      ],
      "output": [
        "_site"
      ]
    },
    "site": {
      "dependencies": [
        "docs"
      ]
    },
    "e2e": {
      "command": "playwright test",
      "dependencies": [
        "build"
      ]
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "dependencies": {
    "@patternfly/elements": "^2.0.0-rc.4",
    "@rhds/tokens": "^1.0.0-beta.3",
    "lit": "^2.6.1",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-beta.3",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@jspm/generator": "^1.0.2",
    "@lrnwebcomponents/code-sample": "^4.1.0",
    "@patternfly/create-element": "^1.0.0-next.9",
    "@patternfly/eslint-config-elements": "^1.0.0-rc.1",
    "@patternfly/pfe-tools": "^1.0.0-rc.3",
    "@playwright/test": "^1.30.0",
    "@types/mocha": "^10.0.0",
    "async-csv": "^2.1.3",
    "autoprefixer": "^10.4.8",
    "cssnano": "^5.1.13",
    "custom-elements-manifest": "^2.0.0",
    "eleventy-plugin-dart-sass": "^1.0.3",
    "eleventy-plugin-nesting-toc": "^1.3.0",
    "esbuild": "^0.14.49",
    "git-branch": "^2.0.1",
    "husky": "^8.0.0",
    "leasot": "^13.2.0",
    "linkedom": "^0.14.12",
    "markdown-it-anchor": "^8.6.4",
    "open": "^8.0.4",
    "postcss-pxtorem": "^6.0.0",
    "renamer": "^4.0.0",
    "sassdoc": "^2.7.4",
    "sinon": "^15.0.1",
    "spandx": "^2.2.5",
    "stylelint": "^14.9.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^29.0.0",
    "ttypescript": "^1.5.13",
    "wireit": "^0.9.4"
  }
}
