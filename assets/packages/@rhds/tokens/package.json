{
  "name": "@rhds/tokens",
  "version": "2.1.1",
  "description": "Red Hat Design System Tokens",
  "scripts": {
    "build": "wireit",
    "11ty": "wireit",
    "package-vscode": "wireit",
    "style-dictionary": "wireit",
    "start": "wireit",
    "lint": "eslint lib plugins test docs",
    "format": "eslint --fix lib plugins test docs",
    "test": "wireit"
  },
  "type": "module",
  "main": "js/tokens.cjs",
  "module": "js/tokens.js",
  "exports": {
    ".": {
      "import": "./js/tokens.js",
      "require": "./js/tokens.cjs",
      "types": "./js/types.d.ts"
    },
    "./meta.js": {
      "import": "./js/meta.js",
      "require": "./js/meta.cjs"
    },
    "./json/*": {
      "require": "./json/*"
    },
    "./plugins/stylelint.js": "./plugins/stylelint.js",
    "./css/*": "./css/*",
    "./values.js": {
      "import": "./js/values.js",
      "require": "./js/values.cjs",
      "types": "./js/values.d.ts"
    },
    "./animation.js": {
      "import": "./js/animation.js",
      "types": "./js/animation.d.ts"
    },
    "./border.js": {
      "import": "./js/border.js",
      "types": "./js/border.d.ts"
    },
    "./box-shadow.js": {
      "import": "./js/box-shadow.js",
      "types": "./js/box-shadow.d.ts"
    },
    "./color.js": {
      "import": "./js/color.js",
      "types": "./js/color.d.ts"
    },
    "./icon.js": {
      "import": "./js/icon.js",
      "types": "./js/icon.d.ts"
    },
    "./length.js": {
      "import": "./js/length.js",
      "types": "./js/length.d.ts"
    },
    "./media.js": {
      "import": "./js/media.js",
      "types": "./js/media.d.ts"
    },
    "./opacity.js": {
      "import": "./js/opacity.js",
      "types": "./js/opacity.d.ts"
    },
    "./space.js": {
      "import": "./js/space.js",
      "types": "./js/space.d.ts"
    },
    "./typography.js": {
      "import": "./js/typography.js",
      "types": "./js/typography.d.ts"
    }
  },
  "files": [
    "css",
    "editor",
    "plugins/**/*.{js,cjs,d.ts,d,cts,map}",
    "js/**/*.{js,d.ts,cjs,map}",
    "json",
    "scss"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "compile",
        "package-vscode",
        "11ty"
      ]
    },
    "compile": {
      "command": "tsc -p tsconfig.output.json",
      "dependencies": [
        "style-dictionary"
      ],
      "output": [
        "./plugins/**/*.{js,map,d.ts,d.cts}",
        "./test/**/*.{js,map;.d.ts}",
        "./js/**/*.{d.ts,map}"
      ]
    },
    "11ty": {
      "command": "NODE_OPTIONS=\"--import tsx\" eleventy --config=eleventy.config.ts",
      "dependencies": [
        "style-dictionary",
        "compile"
      ],
      "output": [
        "build/**/*"
      ]
    },
    "style-dictionary": {
      "command": "node --experimental-strip-types build.ts",
      "files": [
        "tokens/**/*",
        "docs/**/*",
        "lib/**/*",
        "platforms.yaml",
        "build.ts"
      ],
      "output": [
        "build/**",
        "css/**",
        "editor/**",
        "js/**",
        "json/**",
        "scss/**"
      ]
    },
    "start": {
      "command": "NODE_OPTIONS=\"--import tsx\" npx eleventy --config=eleventy.config.ts --watch --serve",
      "service": true
    },
    "test": {
      "command": "tape-es 'test/*.js' | tap-difflet",
      "files": [
        "test/**/*.js",
        "plugins/**/*.js",
        "tokens/**/*.ya?ml"
      ],
      "dependencies": [
        "compile"
      ]
    },
    "package-vscode": {
      "command": "cd editor/vscode && vsce package",
      "files": [
        "editor/vscode/package.json",
        "editor/vscode/snippets.json"
      ],
      "dependencies": [
        "style-dictionary"
      ],
      "output": [
        "*.vsix"
      ]
    }
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0-alpha.18 || ^3.0.0",
    "@changesets/cli": "^2.27.7",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.1",
    "@jspm/generator": "^2.1.3",
    "@patternfly/eslint-config-elements": "^4.0.0",
    "@rhds/elements": "^2.0.0",
    "@rhds/icons": "^1.1.1",
    "@types/node": "^22.5.1",
    "@types/tape": "^5.6.4",
    "css-tree": "^2.3.1",
    "deepmerge": "^4.3.1",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "markdown-it": "^14.1.0",
    "style-dictionary": "^4.1.0",
    "tap-difflet": "^0.7.2",
    "tape-describe": "^1.0.3",
    "tape-es": "^1.2.17",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vsce": "^2.15.0",
    "wireit": "^0.14.8",
    "yaml": "^2.5.0"
  },
  "dependencies": {
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "highlight.js": "^11.10.0",
    "postcss-value-parser": "^4.2.0",
    "stylelint": "^16.9.0"
  }
}
