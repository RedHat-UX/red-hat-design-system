      <img src="{{ '/assets/accordion/accordion-behavior-3.svg' | url }}" alt="Accordion with one panel expanded and cursors over the clickable zones" style="--example-img-max-width: 872px;">
    </div>
  {%- endcall %}

{%- endcall %}

