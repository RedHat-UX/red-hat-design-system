        <rh-stat>
            <span slot="title">More than</span>
            <span slot="statistic">90%</span>
            <span slot="description">of Fortune 500 companies rely on Red Hat.<sup>1</sup></span>
        </rh-stat>
    </div>
{%- endcall %}

{%- endcall %}


