<!doctype html>
<html class="no-js" lang="">
  <head>
    {% include "./snippets/meta.njk" %}

    <link rel="stylesheet" href="{{ '/styles/reset.css' | url }}">
    <link rel="stylesheet" href="{{ '/assets/redhat/redhat-font/2/webfonts/red-hat-font.css' | url }}" media="all">
    <link rel="stylesheet" href="{{ '/styles/typography.css' | url }}">

    <link rel="stylesheet" href="{{ '/assets/prism.css' | url }}">
    <link rel="stylesheet" href="{{ '/assets/elements/uxdot-sidenav-lightdom.css' | url }}">
    <link rel="stylesheet" href="{{ '/assets/elements/uxdot-copy-permalink-lightdom.css' | url }}">
    <link rel="stylesheet" href="{{ '/assets/packages/@rhds/elements/elements/rh-footer/rh-footer-lightdom.css' | url }}">

    <link rel="stylesheet" href="{{ '/styles/styles.css' | url }}">

    {% include "./snippets/javascript.html" %}
    {% include "./snippets/usersnap.html" %}

    <script type="module">
      // As soon as the DOM is ready, toggle JS class
      document.documentElement.classList.remove('no-js');
      document.documentElement.classList.add('js');
    </script>
  </head>

  {%- set extraPageClasses = bodyClasses or "" -%}
  {%- if title -%}
    {% set extraPageClasses = extraPageClasses + 'page-' + title | slug -%}
  {%- endif -%}

  <body class="{{ extraPageClasses }}">
    {{ content | safe }}
  </body>
</html>
