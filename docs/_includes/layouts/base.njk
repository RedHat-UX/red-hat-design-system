<!doctype html>
<html class="no-js" lang="">
  <head>
    {% include "../partials/meta.html" %}

    <link rel="stylesheet" href="{{ '/styles/styles.css' | url }}">

    {% include "../partials/javascript/global.html" %}
    {% include "../partials/javascript/usersnap.html" %}

    <script type="module">
      // As soon as the DOM is ready, toggle JS class
      document.documentElement.classList.remove('no-js');
      document.documentElement.classList.add('js');
    </script>
  </head>

  {%- set extraPageClasses = bodyClasses or "" -%}
  {%- if title -%}
    {% set extraPageClasses = extraPageClasses + ' page-' + title | slug -%}
  {%- endif -%}

  <body class="{{ extraPageClasses }}">
    {{ content | safe }}
  </body>
</html>
